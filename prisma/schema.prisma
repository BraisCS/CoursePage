generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
}

model course {
  id           Int            @id @default(autoincrement())
  title        String
  introduction String
  category     String
  max_stundets Int
  level        Int
  public       Boolean
  qandr        qandr[]
  requirements Requirements[]
  price        Float
  modules      module[]
  image        Bytes? // Campo binario para la imagen, asegúrate de que esto está en tu schema
}

model qandr {
  id       Int    @id @default(autoincrement())
  question String
  request  String
  courseId Int
  course   course @relation(fields: [courseId], references: [id])
}

model Requirements {
  id       Int    @id @default(autoincrement())
  title    String
  courseId Int
  course   course @relation(fields: [courseId], references: [id])
}

model module {
  id       Int      @id @default(autoincrement())
  title    String
  courseId Int
  course   course   @relation(fields: [courseId], references: [id])
  lessons  lesson[]
}

model lesson {
  id       Int    @id @default(autoincrement())
  title    String
  moduleId Int
  module   module @relation(fields: [moduleId], references: [id])
}
